@charset "utf-8";

.main-wrap { padding:0 40px; }
.main-wrap .top-visual { }
.main-wrap .sch-box { width:1200px; margin:25px auto 0 auto; text-align:center; }
.main-wrap .sch-box .sch-top { position:relative; width:720px; height:80px; text-align:left;  margin:0 auto; padding:20px 80px 20px 40px; border-radius:40px; border:2px solid #113585; }
.main-wrap .sch-box .btn-sch { position:absolute; top:18px; right:20px; width:40px; height:40px; background:url(/kiam/pcWeb/resources/images/common/ico_comm.png) no-repeat -260px -70px;}
.main-wrap .sch-box input[type="text"]{ width:100%; font-size:24px; font-weight:600; line-height:38px; }
.main-wrap .sch-box input[type="text"]::placeholder { color:#113585; }
.main-wrap .sch-box .sch-tips { margin:20px 0 0 0; }
.main-wrap .sch-box .sch-tips a { display:inline-block; padding:10px; color:#113585; }
.main-conts { width:1200px; margin:0 auto; }

.main-visual .main-items { height:516px; }
.main-visual .items { position:relative; min-width:1280px; border-radius:60px 0 60px 60px; padding:0 40px }
.main-visual .items .product { width:1200px; height:480px; margin:0 auto; padding:120px 0 0 0; height:480px; z-index:1; }
.main-visual .items .product .txts { display:block; color:#878c91; font-size:24px; }
.main-visual .items .product .title { display:block; margin:25px 0 0 0; color:#222; font-size:54px; font-weight:700; }
.main-visual .items .product .btns { margin:40px 0 0; }
.main-visual .items .product .btns a { display:inline-block; height:48px; margin-right:5px; padding:14px 25px 0 25px; font-weight:500; border:1px solid #000; border-radius:24px; color:#000;  }
.main-visual .items .product .btns a.btn-kosef { border:0; color:#fff; padding-top:15px; background:linear-gradient(to right, #524ae6, #ca3eee); }
.main-visual .items .bg { position:absolute; top:0; right:5%; z-index:0; }

.main-conts { position:relative; margin-top:80px; padding-bottom:80px; }
.main-conts:before { content:''; display:block; position:absolute; top:0; left:820px; bottom:80px; width:1px; background:#dbdfe1; }
.main-conts:after { content:''; display:block; clear:both; }
.main-conts .major { float:left; width:820px; padding-right:60px; }
.main-conts aside { float:right; width:calc(100% - 820px); padding-left:60px;  }
.main-conts aside .main-bnr { margin-top:40px; height:150px; background:#eee; border-radius:15px;    }

.main-conts article { margin-top:80px; }
.main-conts article h2 { margin-bottom:20px; font-weight:600; font-size:24px; color:#222; }
.main-conts article h2 a { display:inline-block; position:relative; padding-right:18px; color:inherit; }
.main-conts article h2 a:after { content:''; display:inline-block; position:absolute; top:50%; right:0; margin-top:-4px; border:solid #878c91; border-width: 0 2px 2px 0; padding:4px; transform: rotate(-45deg); }
.main-conts aside > article:first-child { margin-top:0; }
.main-conts aside > article { margin-top:40px; }
article.fund-summary { margin-top:0; }
article.fund-summary h2 { font-size:38px !important; font-weight:700 !important; }
article.fund-summary h2 span { display:inline-block; position:relative; padding-right:20px; }
article.fund-summary h2 span:after { content:''; display:block; position:absolute; bottom:0; right:0; width:10px; height:10px; border-radius:50%; background:#ec3690;  }

.pic-list li { position:relative; margin:55px 0 0 0; padding-top:220px; }
.pic-list li:first-child { margin-top:0; }
.pic-list li a { color:#969a9e; }
.pic-list li span,
.pic-list li strong { display:block; font-size:14px; }
.pic-list li .pic { position:absolute; top:0; left:0; right:0; height:200px; border-radius:15px; background:#f2e9d3; }
.pic-list li .pic .tag { position:absolute;  }
.pic-list li .pic .tag.live { display:inline-block; top:140px; left:20px; height:30px; padding:9px 15px 0 15px; color:#fff; font-size:12px; font-family:Roboto; background:#f01d1d; border-radius:15px; }
.pic-list li .title { margin:15px 0;  color:#222; font-size:16px; line-height:1.4; font-weight:500; } 
.pic-list li .date { font-family:Roboto; } 

.fund-summary .fund-tab { margin-top:50px; }
.fund-summary .fund-tab .ui-tab-btns { line-height:0; font-size:0; }
.fund-summary .fund-tab .ui-tab-btn { display:inline-block; height:52px; padding:0 25px; font-size:18px; background:#f7f7f7; color:#878c91; border-radius:26px; }
.fund-summary .fund-tab .ui-tab-btn + .ui-tab-btn { margin-left:10px; }
.fund-summary .fund-tab .ui-tab-btn.selected { color:#fff; background:#394de4; }
.fund-summary .fund-tab .ui-tab-pnls { margin-top:40px; }

.fund-list li { margin-top:15px; line-height:0; font-size:0; }
.fund-list li a { position:relative; display:block; height:185px; padding:40px 180px 0 48px;  border-radius:20px 0 20px 20px; box-shadow:0 6px 12px 0 rgb(0 0 0 / 4%) }
.fund-list li a:before { content:''; display:block; position:absolute; top:0; left:0; bottom:0; width:100%; border:1px solid #e8eaec; border-radius:20px 0 20px 20px; }
.fund-list li a:hover:before { border-color:#113585;  }
.fund-list li.best a { height:265px; padding-right:310px;  background:linear-gradient(134deg,#3a4ee5 -10%,#953eee 98%); box-shadow:inset 0 -3px 10px 0 rgb(0 0 0 / 10%), 0 6px 8px 0 rgb(0 0 0 / 15%)}
.fund-list li.best a:before { display:none; }
.fund-list li a .title { overflow:hidden; display:block; margin:16px 0 0 0; font-size:24px; line-height:1.3; color:#222; text-overflow:ellipsis; white-space:nowrap; }
.fund-list li.best a .title { display:-webkit-box; height:85px; margin-top:20px; -webkit-box-orient:vertical; -webkit-line-clamp:2; font-size:32px; color:#fff; white-space: inherit; }
.fund-list li a .txts { display:block; margin-top:14px; font-size:16px; color:#878c91;  }
.fund-list li.best a .txts { color:#fff; opacity:0.7;  }
.fund-list li .flags { display:block; }
.fund-list li .flags span { display:inline-block; height:28px; margin-right:4px; padding:6px 10px 0 10px; color:#113585; border-radius:5px; font-size:14px; border:1px solid #113585; }
.fund-list li .flags span.high { border-color:#f01d69; color:#f01d69; }
.fund-list li .flags span.low { border-color:#878c91; color:#878c91; }
.fund-list li.best .flags span { border: 1px solid rgba(255, 255, 255, .5); color:#fff;  }
.fund-list li.best .flags span.high { border-color:#ff6969; color:#ff6969; }
.fund-list li.best .flags span.low { border-color:#878c91; color:#878c91; }
.fund-list li .rate { position:absolute; bottom:42px; right:45px; font-size:20px; text-align:right; }
.fund-list li .rate .points { font-family:Roboto; letter-spacing:1px; font-weight:700; font-size:18px; }
.fund-list li .rate em { padding-right:5px; font-size:38px; font-family: inherit; } 
.fund-list li .rate span { display:block; font-size:14px; margin-top:5px; }
.fund-list li.best .rate { color:#fff; } 

.noti-list li { border-top:1px solid #e9e9e9; }
.noti-list li:first-child { border-top:0; }
.noti-list li a { display:flex; justify-content: space-between; align-items: center; padding:20px 0;  }
.noti-list li a span.txts { width:calc(100% - 200px); }
.noti-list li a span.date { font-family:Roboto; letter-spacing:0px; color:#878c91; }

