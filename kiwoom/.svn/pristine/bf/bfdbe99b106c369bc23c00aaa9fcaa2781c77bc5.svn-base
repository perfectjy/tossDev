@charset "utf-8";

.ui-drop-input .inp {border-radius:0 8px 8px 0;}

/* 키자매거진 */
.sub-wrap.lounge .sub-head-wrap {height:271px; padding:90px 0 0 0; text-align:center; color:#222; background:linear-gradient(#DBECFC, #BAD3F8);}
.sub-wrap.lounge .sub-head-wrap.bg h2 {color:#222;}
.sub-wrap.lounge .sub-head-wrap.bg .head-group .head-info {color:#73737A;}
.sub-wrap.lounge .sub-head-wrap.bg + .contents .ui-tab {margin-top:96px;}
.list-thumb {margin:24px 0; border-top:1px solid #222;}
.list-thumb .list-item {float:left; width:384px; height:363px; margin:24px 0 0 24px;}
.list-thumb .list-item::after {content:''; display:block; clear:both; }
.list-thumb .list-item a {overflow:hidden; display:block; position:relative; width:100%; height:100%; border:1px solid #dfe0e2; border-radius:24px 0 24px 24px;}
.list-thumb .list-item a:focus {border-color:#1A399E;}
.list-thumb .list-item .imgs {overflow:hidden; position:relative; display:block; padding-bottom:53.645833%;}
.list-thumb .list-item:nth-child(3n+1) {margin-left:0;}
.list-thumb .list-item a .imgs img {position:absolute; left:0; right:0; bottom:0; top:0; width:100%;}
.list-thumb .list-item .imgs.video:after {position:absolute; top:50%; left:50%; width:px; height:px; background:url(/kiam/pcWeb/resources/images/common/ico_comm.png) no-repeat -px -px; background-size:500px auto; transform:translate(-50%,-50%); }
.list-thumb .list-cont {display:block; padding:24px 32px;}
.list-thumb .list-cont > * {display:block;}
.list-thumb .list-cont .stxt {font-size:16px; line-height:24px; color:#73737A;}
.list-thumb .list-cont .tit {margin:8px 0; font-size:16px; line-height:24px; color:#222;}
.list-thumb .list-item a:focus .tit {color:#1A399E;}
.list-thumb .list-cont .date {font-size:14px; line-height:21px; color:#73737A;}
.sub-wrap.lounge .ui-tab .ui-tab-btns + .ui-tab-pnls {margin:40px auto 0;}

.board-conts {margin:96px 0 0; border-top:1px solid #222;}
.board-conts .board-head {position: relative; padding:24px 38px 24px;}
.board-conts .board-head .board-tit {margin-bottom:9px; font-size:20px; line-height:30px;}
.board-conts .board-sub-tit .board-date {font-size:14px; line-height:21px; color:#73737A; font-weight:400;}
.board-conts .board-sub-tit .writer::before {content:''; display:inline-block; width:1px; height:8px; margin:0 16px; background-color:#73737A; vertical-align:1px;}
.board-conts .board-sub-tit .writer {display:inline-block; font-size:16px; line-height:24px; color:#73737A;}
.board-conts .board-cont {padding:40px; border-top:1px solid #DFE0E2; border-bottom:1px solid #DFE0E2;}
.board-conts .board-cont .imgs {display:block; width:100%; margin-bottom:40px;}
.board-conts .board-cont .imgs img {max-width:100%;}
.board-conts .board-cont .board-txt {font-size:16px; line-height:24px;}
.board-conts .board-prev-next {}
.board-conts .board-prev-next > dl {display:flex; align-items:center; height:105px; border-bottom:1px solid #DFE0E2;}
.board-conts .board-prev-next > dl dt {width:122px; padding:40px; font-size:16px; line-height:24px; color:#9D9DA5;}
.board-conts .board-prev-next > dl dd {width:calc(100% - 122px);}
.board-conts .board-prev-next > dl dd a {display:block; padding:40px 0; font-size:16px; line-height:24px; color:#73737A;}
.board-conts .board-prev-next > dl dd a:focus {color:#222;}
.board-conts .board-prev-next {}

/* 버튼 추가 */
.btn-right {margin-top:16px; text-align:right;}
.btn.sub {padding:0 24px; height:48px; line-height:46px; color:#222; border:1px solid #222; border-radius:8px;}

.btn-sns {position:absolute; right:15px; top:50%; display: inline-block; width: 48px; height: 48px; transform:translateY(-50%);}
.btn-sns::before {position:absolute; top:50%; right:20px; display:block; content:''; width:16px; height:16px;  background: url(/kiam/pcWeb/resources/images/common/ico_comm.png) no-repeat -180px 0; background-size:600px auto; transform:translateY(-50%);}
    