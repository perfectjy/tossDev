/* mo button sticky*/
.btn-area{ display: flex; flex-direction: row; flex-wrap: nowrap; }
.btn-area.sticky{ position: fixed; left: 0; right: 0; bottom: 0; margin: 0; z-index: 99; }
.btn-area.sticky [class^=btn-mo-] { flex-grow:1; width: 50%; min-width: auto; min-height: 64px; font-size: 16px; font-weight: 600; }
.btn-area.sticky .btn-mo-agree{ color: #FFF; background-color: #1A399E;}
.btn-area.sticky .btn-mo-agree:active{ background-color: #1D3480; }
.btn-area.sticky .btn-mo-cancel{ color: #B9BBC6; border-top: 1px solid #DFE0E2; background-color: #FFF;}
.btn-area.sticky .btn-mo-cancel:active{ color: #73737A; }

/*buttons*/
.btn { width: 100%; line-height: inherit !important; }/*차후지움*/
.btn { display: inline-flex; justify-content: center; align-items: center; min-width: 100%; min-height: 48px; padding: 0 40px; font-size: 16px; border-radius: 32px; background-color:#FFF; text-align: center;}
.btn:disabled { color: #B9BBC6 !important; border: 1px solid #DFE0E2 !important; background-color: #DFE0E2 !important; cursor: default; }
.btn:disabled:active { color: #B9BBC6; border: 1px solid #DFE0E2; background-color: #DFE0E2; }
.btn.primary { color: #EC008C; font-weight: 600; border: 1px solid #EC008C; background-color: #FFF;}
.btn.primary:active { color: #FFF; background-color: #EC008C; }
.btn.secondary { color: #222; border: 1px solid #222; }
.btn.secondary:active { background-color: #F7F8F8; }
.btn.tertiary { color: #9D9DA5; border: 1px solid #9D9DA5;}
.btn.tertiary:active { background-color: #F7F8F8; }
.btn.fill { color: #FFF; background-color: #EC008C;}
.btn.fill:active { background-color: #C02882; }
.btn.lg { min-width: 200px; min-height: 56px; font-size: 20px; }

/*more button*/
.btn-more{ width: 100%; background-color: #FFF;}
.btn-more > span{ display: inline-flex; color: #9D9DA5; font-size: 14px; font-weight: 500; padding: 16px 0;}
.btn-more > span .show{ display: inline-block; position: relative; width: 16px; height: 16px; margin-left: 4px;}
.btn-more > span .show::before, 
.btn-more > span .show::after{ content: ""; display: block; position: absolute; width: 7px; height: 1px; background: #B9BBC6; }
.btn-more > span .show::before{ transform: rotate(45deg); top: 7px; left: 1px;}
.btn-more > span .show::after{ transform: rotate(-45deg); top: 7px; left: 6px;}
.btn-more:active{ background-color: #F7F8F8; }
.btn-more:active > span { color: #222; opacity: 1;}
.btn-more:active > span .show::before,
.btn-more:active > span .show::after{ background-color: #222222;}

/*icon button*/
.btn-icon{ min-width: 92px; min-height: 40px; padding: 0 24px; border: 1px solid #222; border-radius: 40px;}
.btn-icon span{ display: flex; align-items: center; justify-content: center; font-size: 12px; font-weight:500;}
.btn-icon span::after{ content: ''; display: inline-block; width: 16px; height: 16px; margin-left: 4px; background: url('../images/common/ico_comm.png') -120px 0 no-repeat; background-size: 500px 300px;}

/*no-line button*/
.btn-noline{padding: 4px;}
.btn-noline span{ display: inline-flex; align-items: center; color: #222; font-size: 12px; font-weight: 500;}
.btn-noline.dw span::after{ content: ''; display: inline-block; width: 16px; height: 16px; margin-left: 4px; background: url('../images/common/ico_comm.png') -260px 0 no-repeat; background-size: 500px 300px;}

