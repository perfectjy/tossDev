    <script>
        (() => {
            'use strict';
            // 스크롤고정
            var win = $(window),
                tabHeader = $('.ui-tab.scroll'),
                tabHeaderOffsetTop = tabHeader.offset().top;
                // console.log(tabHeaderOffsetTop)
                win.scroll(function(){
                    if($(this).scrollTop() >= tabHeaderOffsetTop){
                        tabHeader.addClass('fixed');
                    }else{
                        tabHeader.removeClass('fixed');
                    }
                });
                
            var $menu = $('.ui-tab-list li'),
                $contBox = $('.ui-tab-content > div');
                $menu.click(function(e){
                    e.preventDefault(); 
                    // $(this).addClass('selected').siblings().removeClass('selected');
                    var idx = $(this).index();
                    var contents = $contBox.eq(idx);
                    var contentsDistance = contents.offset().top;
                    console.log(contents, contentsDistance);
                    $('html,body').stop().animate({scrollTop:contentsDistance})
                });

                $(window).scroll(function(){
                    $contBox.each(function(){
                        if($(this).offset().top <=  $(window).scrollTop()){
                            var idx = $(this).index();
                            $menu.removeClass('selected');
                            $menu.eq(idx).addClass('selected');

                        }
                    })
                });
        })();
    </script>
