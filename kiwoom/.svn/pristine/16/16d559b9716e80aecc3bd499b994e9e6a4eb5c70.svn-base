@charset "utf-8";


.tag-wrap em{height:20px; padding:0 8px; line-height:20px; font-size:10px;}


/* 통합검색 - 결과 */
.sch-list-wrap{position:relative; margin-top:60px;}
.sch-list-wrap .list-tit h3{display:flex; margin:0 0 20px; font-size:16px; color:#222; font-weight:700;}
.sch-list-wrap .list-tit h3 > span{padding-left:5px; line-height:1.2; font-size:14px; font-weight:700; color:#EC008C; letter-spacing:-0.5px;}
.sch-list-wrap .list-area{border-top:1px solid #222;}
.sch-list-wrap .list-area.flex .list-item{display:flex; align-items:center;}
.sch-list-wrap .list-area .list-item{position:relative; padding:16px 0; border-bottom:1px solid #DFE0E2;}
.sch-list-wrap .list-area .list-item .list-cont{margin:-10px 0 0 20px;}
.sch-list-wrap .list-area .list-item .stxt{margin-top:8px; font-size:12px; color:#73737A;}
.sch-list-wrap .list-area .list-item .tit{display:block; margin-top:10px;}
.sch-list-wrap .list-area .list-item .keyword{color:#1A399E;}
.sch-list-wrap .list-area .list-item .imgs{position:relative; width:104px; height:72px; border-radius:8px; background:#d7d7d7;}
.sch-list-wrap .list-area .list-item .imgs.video::before{content:''; position:absolute; top:50%; left:50%; transform:translate(-50%, -50%); width:24px; height:24px; background: url(/kiam/moWeb/resources/images/common/ico_common.png); background-position:-390px -20px; background-size:500px 300px;}
.sch-list-wrap .list-area .list-item .imgs > img{max-width:100%; max-height:100%;}
.sch-list-wrap .list-area .list-item .rate{display:flex; align-items:center; justify-content:right; margin-top:10px;}
.sch-list-wrap .list-area .list-item .rate .txts{padding-right:8px; font-size:12px; color:#73737A;}
.sch-list-wrap .list-area .list-item .rate .points{font-size:24px; font-weight:700; color:#EC008C;}
.sch-list-wrap .list-area .list-item .btn-link{position:absolute; top:0; left:0; right:0; bottom:0; width:100%; height:100%; }
.sch-list-wrap .more-btn{position:absolute; top:3px; right:0; font-size:12px; color:#73737A;}
.sch-list-wrap .more-btn span{position:relative; padding-right:10px;}
.sch-list-wrap .more-btn .ico-arrow::after{content:''; position:absolute; right:0; top:50%; width:6px; height:6px; border-right:1px solid #73737A; border-top:1px solid #73737A; transform: translateY(-50%) rotate(45deg);}


/* 디자인 미정 TYPE 02 */
.sch-list-wrap .list-area .list-item.v2{padding:0; border-bottom:0;}
.sch-list-wrap .list-area .list-item.v2 > a{display:block; padding:24px; border:1px solid #DFE0E2; border-radius:16px 0 16px 16px; }
.sch-list-wrap .list-area .list-item.v2 > a:hover{background:#F1F7FE; border:1px solid #1A399E;}


/* 디자인 미정 TYPE 03 */
.sch-list-wrap .list-area .list-item.v3{padding:0; border-bottom:0;}
.sch-list-wrap .list-area .list-item.v3 .list-cont{display:block; margin:24px 24px 0;}
.sch-list-wrap .list-area .list-item.v3 .tit{overflow:hidden; display: -webkit-box; -webkit-box-orient: vertical; -webkit-line-clamp: 2; text-overflow:ellipsis; word-break: break-word; margin-bottom:15px; font-size:20px; line-height:30px;}
.sch-list-wrap .list-area .list-item.v3 .stxt{font-size:14px;}
.sch-list-wrap .list-area .list-item.v3 > a{display:block; width:100%; min-height:327px; padding:0; border:1px solid #DFE0E2; border-radius:24px 0 24px 24px;}
.sch-list-wrap .list-area .list-item.v3 > a:hover{border:1px solid #1A399E; box-shadow:0 3px 8px rgba(26, 57, 158, 0.16); border-radius:24px 0 24px 24px;}
.sch-list-wrap .list-area .list-item.v3 > a:hover .tit{color:#1A399E;}
.sch-list-wrap .list-area .list-item.v3 .imgs{display:block; width:100%; height:180px; border-radius:24px 0 0 0;}
