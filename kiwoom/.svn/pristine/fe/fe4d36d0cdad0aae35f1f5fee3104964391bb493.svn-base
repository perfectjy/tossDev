@charset "utf-8";

.sub-head-wrap { position:relative; padding:16px 24px 0 24px; text-align:center; }
.sub-head-wrap h2 { color:#fff; font-size:20px; line-height:30px; font-weight:700; text-align:center; word-break:keep-all; }
.sub-head-wrap .title { display:block; margin-bottom:24px; text-align:left; font-size:20px; line-height:30px; font-weight:700; }

.sub-wrap.fund-detail-wrap .sub-head-wrap { min-height:270px; padding:40px 12% 0; background: linear-gradient(142.43deg, #1A399E 35.19%, #4D38CE 103.99%); }
.sub-wrap.fund-detail-wrap .btn-sns { position:absolute; top:17px; right:24px; }
.sub-wrap.fund-detail-wrap .fund-code { color:#B9BBC6; font-size:12px; line-height:18px;  }
.sub-head-wrap .tag-wrap { margin-bottom:10px; text-align:center; }
.sub-head-wrap .tag-wrap em { margin:2px 2px; }

.fund-info-wrap { position:relative; }
.fund-info-wrap .note { position:absolute; top:-21px; right:24px; color:#DFE0E2; line-height:16px; }
.fund-info-wrap .summary { display:flex; height:102px; align-items:center; justify-content:center; margin:-51px 20px 0; background:#fff; border: 1px solid #1A399E; border-radius:8px; box-shadow: 0px 3px 8px rgba(26, 57, 158, 0.16); }
.fund-info-wrap .summary > div { flex:1 1; text-align:center; }
.fund-info-wrap .summary dt { font-size:12px; line-height:18px; color:#74757E;  }
.fund-info-wrap .summary dd { margin-top:4px; font-size:16px; line-height:24px; }
.fund-info-wrap .doc-info { padding-bottom:24px; }
.fund-info-wrap .doc-info .btns { display:flex; flex-wrap:wrap; max-width:375px; margin:0 auto; padding:0 40px; }
.fund-info-wrap .doc-info a { position:relative; flex: 1 1 40%; margin-top:24px; padding-left:50px; font-size:14px; text-align:left; line-height:40px; color:#74757E; }
.fund-info-wrap .doc-info a:before { content:''; position:absolute; top:0; left:0; width:40px; height:40px; background:url(/kosef/moWeb/resources/images/common/ico_conts.png) no-repeat 0 0; background-size:500px auto; }
.fund-info-wrap .doc-info a.doc-invest:before { background-position-x:-50px; }
.fund-info-wrap .doc-info a.doc-tem:before { background-position-x:-100px; }
.fund-info-wrap .doc-info a.doc-fact:before { background-position-x:-150px; }

.sub-head-wrap .find-fund .sch-top { position:relative; }
.sub-head-wrap .find-fund .inp-text { height:48px; border:1px solid #1A399E; border-radius:100px; }
.sub-head-wrap .find-fund .btn-sch { position:absolute; top:50%; right:15px; width:24px; height:24px; margin-top:-12px; background:url(/kosef/moWeb/resources/images/common/ico_comm.png) no-repeat -30px -20px; background-size:500px auto; }
