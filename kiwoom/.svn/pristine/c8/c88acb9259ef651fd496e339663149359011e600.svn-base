@charset "utf-8";

/* mo Tab */
.ui-tab.t1 .ui-tab-btns {display:flex; padding:0 12px; border-bottom:1px solid #DFE0E2; font-size:0;}
.ui-tab.t1 .ui-tab-btn {flex:1;  height:42px; font-size:14px; font-weight:500; color:#73737A;}
.ui-tab.t1 .ui-tab-btn.selected {border-bottom:2px solid #EC008C; color:#222; font-weight:700;}
.ui-tab.t1 .ui-tab-pnls {padding: 18px 24px 0 24px;}

/* 디자인 추후 변경 */
.main-tab.search {font-size:0;}
.main-tab.search .ui-tab-btns {display:flex;}
.main-tab.search .ui-tab-btn {flex:1; height:32px; padding:0 8px; color:#1A399E; font-size:14px; background-color:#F7F8F8; border-radius:0;}
.main-tab.search .ui-tab-btn:first-child {border-top-left-radius:8px; border-bottom-left-radius:8px;}
.main-tab.search .ui-tab-btn:last-child {border-top-right-radius:8px; border-bottom-right-radius:8px;}
.main-tab.search .ui-tab-btn + .ui-tab-btn {margin-left:0}
.main-tab.search .ui-tab-btn.selected {border:2px solid #1A399E; font-weight:700; border-radius:8px; background-color:#F1F7FE;}

