//Full
.accordion.full{border: none; border-top: 1px solid #ccc; border-bottom:1px solid #ccc;
	// @include layoutFull();
	width: 100%;

	.fold_header{
		a{padding-right:21px; padding-left:28px;}
	}
	.fold_body{
		padding-left: 40px;
		padding-right: 40px;
		// @include layoutComp();
	}
}


