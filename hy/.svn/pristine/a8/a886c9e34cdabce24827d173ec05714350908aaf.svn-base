//접고 펼치기
.accordion{border:1px solid #ccc;  border-width:1px 0;
	.item{border-top: 1px solid #ccc; 
		&:first-child{border-top: none;}
		.fold_header{
			a{display: table; table-layout: fixed; width: 100%; padding:23px 5px 23px 10px;  color: #fff;
				.title{@include clearfix();width:calc(100% - 15px);
					strong{color:#000;font-weight:500;vertical-align:middle;word-break:break-word;}
					span{float: right; color:#000;vertical-align:middle;word-break:break-word;text-align: right;}
				}
				.icon_angle{display: table-cell;width: 24px;height: 24px;background: url($svg_accordion_arr) center center no-repeat;background-size: 24px 24px; transition: transform $transition_base ; transform: rotate(0);vertical-align: top;}
			}
		}
		.fold_body{display:none;padding:2px 10px 27px;}

		&.on{
			.fold_header a{border-bottom:none;
				.icon_angle{transform: rotate(180deg);}
			}
		}
	}
}



