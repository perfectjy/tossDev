<script type="text/javascript">
 $(document).on("change",".self",function(e){
	if($(this).is(":checked")){
		$(".majorEdit .inputedit").show();
		$(".majorEdit .inputdisabled").hide();
	}else{
		$(".majorEdit .inputedit").hide();
		$(".majorEdit .inputdisabled").show();
	}
})
</script>
<body class="boxType">

<!--01_pop전공검색 : s-->
<!--layerPopWrap : s-->
<div class="dim_bg"></div>
<div class="layerPopWrap w600">
    <div class="titleArea">
        <h2>전공 검색</h2>
    </div>
    <div class="popupContentArea">
       
	  <!--inputTable : s-->
		<div class="inputTable onlyInput noTline mb10">
			<div class="inputSet">
				<ul class="inputArea inlineBlock">
					<li class="item">
						<div class="inputBase placeholder" style="width:410px;">
							<input type="text" placeholder="전공명을 검색하세요." title="전공명을 검색하세요." id="search1">
						</div>
					</li>
					<li class="item">
						<a href="#" class="btn big" style="width: 120px;"><span>검색</span></a>
					</li>
				</ul>
			</div>
		</div>
		<!--inputTable : e-->
