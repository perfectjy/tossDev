@charset "utf-8";

/**
* base.form
* ------------------
*/

.inp_txt, input[type="text"],
input[type="password"],
input[type="tel"] { border: 1px solid #ccc; border-radius: 6px; padding: 0 15px 0 15px; caret-color: #ea7404;  width: 100%;  height: 46px; font-size: 16px; color: #000; }
.inp_txt:focus,
input[type="text"]:focus,
input[type="password"]:focus,
input[type="tel"]:focus { border-color: #ea7404; outline: none; box-shadow: 1px 3px 8px rgba(0, 0, 0, 0.09); }
.inp_txt{padding: 0 40px 0 15px;}

textarea:disabled,
select:disabled,
input:disabled{background-color: #f4f4f4;}

/* select */
select { position: relative; width: 100%; height: 46px; padding: 0 35px 0 15px; border: 1px solid #ccc; border-radius: 6px; font-size: 16px; color: #000; 
	background: #fff url($path + 'common/ico_select_arrow.png') calc(100% - 18px) center no-repeat; 
}
select:disabled{
	background:#f4f4f4 url($path + 'common/ico_select_arrow.png') calc(100% - 18px) center no-repeat;
	opacity:1;}
select::-ms-expand { display: none; }
select:focus { border-color: #ea7404; outline: none; }
select::after { content: ''; position: absolute; top: 20px; right: 20px; 
	background: url($path + 'common/ico_select_arrow_gray.png') 0 0 no-repeat;
	width: 17px; height: 11px; background-size: 36px 10px; z-index: -1; 
}
select.sm { border-color: #ccc; border-radius: 6px; width: auto; font-size: 14px; height: 40px; line-height: 38px; min-width: 140px; }

/* textarea */
textarea {padding: 20px; width: 100%; font-size: 16px; border: 1px solid #ccc; border-radius: 10px; resize: none; caret-color: #ea7404; vertical-align: top; }
textarea:focus { border-color: $point_color; outline: none; }
.textarea_wrap{position: relative;overflow: hidden; width: auto; font-size: 16px;  border: 1px solid #ccc; border-radius: 8px;
	textarea{border: none; border-radius: none; width: 100%;}
	textarea[readonly]{background-color: #fafafa;-ms-overflow-style: auto;}
	&.focus{ border-color: $point_color;
		textarea{outline:none;}
	}
}
.textarea_wrap.fixed60{width: 840px;}
.ie .textarea_wrap.fixed60{width: 840px;}

/* inp_del */
.inp_del { display: inline-block; width: 20px; height: 20px; overflow: hidden; 
	background: #ddd url($path + 'common/ico_del.png') center/100% no-repeat; 
	border-radius: 50%; vertical-align: middle; font-size: 3px; color: transparent; 
}
.unit_item { position: relative; }
.unit_item input { padding-right: 40px; }
.unit_item input::placeholder { text-align: left; }
.unit_item .unit { position: absolute; top: 50%; right: 20px; transform: translateY(-50%); font-size: 15px; }
.inp_price { text-align: right; padding-right: 30px; }

span.inp_txt { display: inline-block; width: auto; overflow: hidden; height: 50px; line-height: 50px; font-size: 40px; font-weight: 700; outline: none; border: 0; vertical-align: top; padding: 0 !important; caret-color: #ea7404; }
span.inp_txt:focus { box-shadow: none; }
span.inp_txt:after { display: inline-block; content: attr(data-content); }
span.inp_txt:empty:before { content: attr(placeholder); display: inline-block; padding: 0; color: #ccc; font-weight: 400; font-size: inherit; }
// .auto_input .inp_del { vertical-align: top; margin: 10px 0 0 5px; }

/* CheckBox, Radio */
input[type="checkbox"],
input[type="radio"] {position: absolute; width: 1px;height: 1px;margin: -1px;border: 0;overflow: hidden;padding: 0;clip: rect(0,0,0,0);-webkit-appearance: none;opacity: 0;}
input[type="radio"]:focus+label:before,
input[type="checkbox"]:focus+label:before{box-shadow:0px 0px 2px 2px rgba(0,97,255,0.8)}

input[type="radio"] + label > .sub { display:inline-block; color:#777; margin-left:10px; }
input[type="checkbox"].ss + label {font-size:14px; color:#555; line-height:20px; padding-left:30px; min-height:20px;}
input[type="checkbox"].ss + label::before {width:20px; height: 20px; margin-top:-10px;}

/* checkbox */
input[type="checkbox"] + label{position:relative;display:inline-block;padding-left:36px;font-size:16px;min-height:28px; color:#000; line-height:26px; cursor: pointer;}
input[type="checkbox"] + label::before{content:'';position:absolute;top:50%;left:0;width:25px;height:25px;border:1px solid #d3d3d3;box-sizing: border-box;border-radius: 3px; background:#fff; margin-top:-12.5px;}
input[type="checkbox"]:checked + label::before{left:0; background: #ea7404 url($path + 'common/ico_checkbox.png') center center no-repeat;background-size: 13px 9px;border:none;}
input[type="checkbox"]:disabled + label{color:#aaa !important;}
input[type="checkbox"]:disabled + label::before{opacity:0.6;}

/* radio */
input[type="radio"] + label{position:relative;display:inline-block;padding-left:36px;font-size:16px;min-height:30px; color:#000; line-height:26px; cursor: pointer;}
input[type="radio"] + label::before{content: '';position: absolute;top: 50%;left: 0;width: 26px;height: 26px;border: 1px solid #ccc;box-sizing: border-box;border-radius: 50%; margin-top:-13px; background:#fff;}
input[type="radio"]:checked + label::before{background: url($path + 'common/ico_radio.png') no-repeat;border:none;}
input[type="radio"]:disabled + label{color:#aaa;}
input[type="radio"]:disabled + label::before{opacity: 0.6;}

/* wrapper & else */
.check_box,
.radio_box{display: inline-block;margin-right: 20px;}
.check_box .sub,
.radio_box .sub { display: inline-block; font-size: 14px; color: #777; margin-left: 5px; }

[data-category="CE"]{
	.form_check.line2{text-align:left;}
}
.form_check.solo,
.form_radio.solo{
	label{padding-left: 26px;}
	input[type="radio"] + label::before{margin-top: -10px;}
}

/* switcher */
.switcher {position:relative; display: inline-block;}
.switcher input[type='checkbox'] + label {position:relative; width:60px; height:30px; border-radius: 15px; background:#777; opacity:1; vertical-align: top;}
.switcher input[type='checkbox'] + label:before {width:26px; height:26px; border-radius: 50%; border:0; top:2px; left:2px; margin:0;transition:left .4s;-webkit-transition: left .4s;}
.switcher input[type='checkbox']:checked + label {background:#ea7404;}
.switcher input[type='checkbox']:checked + label:before {left:32px; background:#fff;}
.switcher.s{
	input[type='checkbox'] + label {width: 46px; height: 24px; min-height:24px;}
	input[type='checkbox'] + label:before{width:20px; height:20px; padding: 0; min-height: 20px; background: #fff; border-radius: 50%; transition: left .4s; -webkit-transition: left .4s; }
	input[type='checkbox']:checked + label:before { left: 22px; padding: 0; min-height: 20px; }
}
.switcher_label{color: #555; margin-right: 5px;}
.switcher_label + .switcher{margin-top: 2px;}

 /* filter: BBIW01000010 */
.filters { position:relative; display:inline-block; }
.filters .chk_item { position:relative; display:inline-block; }
.filters .chk_item:not(:last-child) {margin-right:4px;}
.filters input + label { position:relative; display:block; height:38px; font-size:16px; color:#777; line-height:35px; border-radius:19px; padding:0 19px 0 42px; border:1px solid #ddd; margin:0; cursor:pointer; }
.filters input + label::before { content:''; position:absolute; top:7px; left:15px; width:21px; height:21px; background-repeat:no-repeat; margin:0; border:0; }
.filters input:checked + label { border-color:#ea7404; color:#fff; background:#ea7404; }
.filters input:focus + label { box-shadow:0px 0px 1px 1px rgba(0,97,255,0.8); }
.filters input:focus + label::before { box-shadow:none; }
.filters input[type=radio] + label::before { background-image:url($path + 'common/ico_radio.png'); background-position:-70px 0; }
.filters input[type=radio]:checked + label::before { background-position:-100px 0; }
.filters input[type=checkbox] + label::before { background-image:url($path + 'common/ico_filter_multi.png'); background-position:0 0; background-size: cover;}
.filters input[type=checkbox]:checked + label::before { background-position:-20px 0;background-size: cover;}


/**
* search_box
* ------------------
*/
.dialog .search_box { margin-bottom: 40px; }
.dialog .search_box .form_in { width: auto; }

.search_box .form_in { position: relative; width: 620px; margin: 0 auto; }
.search_box .form_in .inp_txt {height: 60px; padding: 16px 100px 16px 38px; border: 2px solid #777; border-radius: 30px; }
.search_box .form_in .inp_txt:focus { border-color: #ea7404; }
.search_box .form_in .inp_del { position: absolute; right: 78px; top: 20px; }
.search_box .btn_search { position: absolute; top: 0; right: 18px; width: 60px; height: 60px; background: url($path + 'common/ico_search_org.png') center center no-repeat; }


/**
* datepicker
* ------------------
*/
.date_box {position:relative;}
.date_box .inp_date {padding-right:40px;}
.date_box .inp_date:focus {box-shadow: none;}
.date_box .ui-datepicker-trigger { position: absolute; top: calc(50% - 23px); right: 0; width: 50px; height: 46px; font-size: 1px; color: transparent; background: url($path + 'common/ico_calendar.png') no-repeat 50% 50%; } //대표와 다름
.date_box .ui-datepicker-trigger:disabled{opacity:0.3}
.ui-widget input,
.ui-widget select,
.ui-widget textarea,
.ui-widget-content{background:#ffffff}
.ui-widget-content a{color:#151515}
.ui-widget-header{background:#fff;color:#252525;font-weight:bold}
.ui-icon{display:block;text-indent:-99999px;overflow:hidden;background-repeat:no-repeat}
.ui-datepicker{width:340px;display:none;padding:0 20px 20px;border:1px solid #ccc;border-radius:15px;z-index:9999!important; outline: 0}
.ui-datepicker .ui-datepicker-header{position:relative}
.ui-datepicker .ui-datepicker-prev,.ui-datepicker .ui-datepicker-next{position:absolute;top:34px;width:20px;height:24px;border-radius:0;overflow:hidden}
.ui-datepicker .ui-datepicker-prev::before,.ui-datepicker .ui-datepicker-next::before { content:''; position:absolute; top:calc(50% - 6px); left:calc(50% - 5px); width:10px; height:12px; background:url($path + 'common/datepicker_arrow.png') 0 0/auto 12px no-repeat; }
.ui-datepicker .ui-datepicker-prev.ui-state-disabled,
.ui-datepicker .ui-datepicker-next.ui-state-disabled{opacity:0.5}
.ui-datepicker .ui-datepicker-prev{left:10px;}
.ui-datepicker .ui-datepicker-prev::before { background-position:0 0; }
.ui-datepicker .ui-datepicker-next{right:10px;}
.ui-datepicker .ui-datepicker-next::before { background-position:-10px 0; }
.ui-datepicker .ui-datepicker-prev span, .ui-datepicker .ui-datepicker-next span{display:block;height:23px;}
.ui-datepicker .ui-datepicker-title{line-height:50px;padding:20px 0 5px;text-align:center;font-size:20px}
.ui-datepicker table{width:100%;font-size:15px;border-collapse:collapse}
.ui-datepicker th{padding:5px 0;color:#000;text-align:center;font-size:14px;}
.ui-datepicker td{height:1.6em;margin:0;padding:3px 0;border:1px solid #fff;font-size:15px;text-align:center;line-height:1.6em;white-space:nowrap;text-decoration:none}
.ui-datepicker td span,.ui-datepicker td a{position:relative; display:inline-block;width:36px;line-height:20px;padding:8px 0;font-size:16px;color:#1a1a1a;text-align:center;text-decoration:none;border-radius:50%;vertical-align:middle}
.ui-datepicker .ui-state-highlight{padding:9px 3px; color:#ea7404}
.ui-datepicker .ui-datepicker-today > .ui-state-highlight:not(.ui-state-active)::after { content:'오늘'; position:absolute; left:50%; top:26px; font-size:12px; color:#ea7404; transform:translateX(-50%); }

.ui-datepicker .ui-datepicker-week-end:first-child span,
.ui-datepicker .ui-datepicker-week-end:first-child a{color:#db3f00}
.ui-datepicker .ui-datepicker-week-end span,.ui-datepicker .ui-datepicker-week-end a{color:#0075c5}
.ui-datepicker .ui-datepicker-calendar .ui-state-disabled .ui-state-default{color:#ddd}
.ui-datepicker .ui-datepicker-calendar .ui-state-default.ui-priority-secondary{color:#939393}
.ui-datepicker .ui-datepicker-calendar .ui-state-default.ui-state-hover{color:#ea7404}
.ui-datepicker .ui-datepicker-calendar .ui-state-default.ui-state-active{background-color:#ea7404;border-color:#ea7404;color:#fff}

[data-category="CE"]{
	.ui-datepicker .ui-datepicker-today > .ui-state-highlight:not(.ui-state-active)::after { content:'Today'; }
}




/**
* Form Structure
* ------------------
* > .form_wrap
* >> 		gird_wrap
* >>> 		.form_group
* >>>>			.form_items
*/

/* gridWrap */
.grid_wrap{@include clearfix();display: flex;flex:1;}
.grid_wrap + .grid_wrap{margin-left: 80px;} // 바닥페이지
.grid_wrap.half{display: block;width:calc(50% - 40px) ;flex:none;}

/* form_wrap */
.form_wrap {@include clearfix(); display: flex;flex:1;
	& + .form_wrap{margin-top: 15px;}
	.form_group:last-child{margin-right: 0 }
	.form_group:first-child{margin-left: 0;}
	.grid_wrap:last-child{margin-right: 0}
	.grid_wrap:first-child{margin-left: 0;}
	&.half .grid_wrap{width:calc(50% - 40px);margin-right: 40px;}
	&.right{justify-content:flex-end;}
}

/* form_group */
.form_group{position: relative;width: 100%; padding-top: 23px; margin-left: 3px; margin-right: 3px; 
	.form_items > *:last-child{margin-right: 0 !important;}
	.form_items > *:first-child{margin-left: 0;}

	//width
	&.half{width:calc(50% - 40px);}
	&.inline{display: inline-block; width: 222px; }
	&.block{display: inline-block; width: calc(100% - 222px)}
	&.block2{display: inline-block; width: calc(100% - 456px)}
	&.else{display: inline-block; width: auto;}
	&.fl,
	&.fr{width: auto;}

	.w_s {flex:none;width: 80px;}
	.w_s2 {flex:none;width: 100px;}
	.w_n {flex:none;width: 150px;}
	.w_m {flex:none;width: 170px;}
	.w_b {flex:none;width: 333px;}

	//종류
	&.form_date{display: inline-block; width: 222px;}
	&.form_check{display: flex; align-items: center; margin-left: 10px;width: auto;}

	//글자수
	.len_obj{position: absolute; right: 0; top:-3px;font-size: 15px;color: #777;
		em{color:$point_color;}
	}
	.right_obj{position: absolute; right: 0; top:-3px;font-size: 15px;color: #777;
		em{color:$point_color;}
		.link{color: #777; text-decoration: underline;}
	}
	.form_label{display: block;position: absolute; left: 0;top: 0;color: #000;font-size:15px;line-height:1.2; }
	.inp_del { position: absolute;top: calc(50% + 14px);right: 15px;transform: translateY(-50%); }
}

/* form_items */
.form_items{display: flex;
	> * { margin-left: 3px; margin-right: 3px; }
	> input{flex:1;}
	> .date_box{flex:1;}
	> .radio_box,
	> .check_box{margin-right: 20px; margin-top: 5px;
		&:last-child{margin-right: 0;}
	}
	> .form_check{margin-top: 5px; margin-left: 20px;
		&:first-child{margin-left: 0;}
	}
	&.phone>select{width: inherit;min-width: 120px;}
	&.company_no{
		.item{position: relative;
			&:not(:first-child){margin-left: 15px;
				&:before{content: '-'; position: absolute; top: 0; left: -17px; display: inline-block; width: 15px; height: 100%; line-height: 44px; text-align: center; }
			}
		}
	}
}

/*  Else Type : 하나 그리드일 경우 */
.grid_wrap{
	.form_group.after_dash{width: 215px;}
}

.after_bar,
.after_dash{position: relative;display: inline-block; margin-right: 15px; 
	&:after{content: '~';position: absolute;right: -18px;top: 0px;display: inline-block;width: 18px;text-align: center;line-height: 44px; }
}
.after_bar:after{content:'-';}

.form_group.after_dash,
.form_group.after_bar{width: 227px;
	&:after{top:22px; }
}

.search_panel{
	.form_group.after_dash,
	.form_group.after_bar{width: 220px;
		& + .form_date{width: 220px;}
	}
}


