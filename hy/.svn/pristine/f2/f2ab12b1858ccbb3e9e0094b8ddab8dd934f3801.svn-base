@charset "utf-8";

/**
* layout.footer
* ------------------
*/

// ----------- 재정의
.footer{background-color:#fff; box-shadow: 0px 0px 15px 10px rgba(0,0,0,0.08), 0 1px 0 -20px rgba(0,0,0,0.08);
}


.directWrap, 
#footer{
	/* Footer - 개선 /202005 */
	.footerWrap{border-top:1px solid #eeeeee}
	.footerCustomerArea{background:#f5f5f5;border-bottom:1px solid #eeeeee}
	.footerCustomer{margin:0 auto; width:$footer_width; position:relative;height:50px;}
	.footerCustomer .telInfo{ float:left; line-height:50px; overflow:hidden;}
	.footerCustomer .telInfo p{ float:left;}
	.footerCustomer .telInfo p.txt{ color:#222222;}
	.footerCustomer .telInfo p.tel{ color:#047db5; font-size:21px; font-family:'NotoRegular';margin:0 4px 0 8px;}
	.footerCustomer .telInfo p.time{ color:#777777;}
	.footerCustomer .infoTxt{ float:right; line-height:50px; overflow:hidden;}
	.footerCustomer .infoTxt li{float:left; position:relative; padding-right:9px; margin-right:8px; font-size:15px;}
	.footerCustomer .infoTxt li:after{ display:block; content:''; position:absolute; right:0; top:50%; width:1px; height:14px; background:#eeeeee;margin-top:-7px;}
	.footerCustomer .infoTxt li:last-child{ padding-right:0; margin-right:0;}
	.footerCustomer .infoTxt li:last-child:after{ display:none;}
	.footerArea{position:relative;margin:0 auto;padding:30px 0;width:$footer_width;}
	.footerArea:after{content:'';display:block;clear:both}
	.footerArea .infoArea{float:left}
	.footerArea .infoArea .footerMenu{}
	.footerArea .infoArea .footerMenu:after{content:'';display:block;clear:both}
	.footerArea .infoArea .footerMenu li{float:left;position:relative;margin-right:8px;padding-right:9px;height:16px}
	.footerArea .infoArea .footerMenu li:after{content:'';display:block;position:absolute;top:50%;right:0;margin-top:-7px;width:1px;height:14px;background:#eeeeee}
	.footerArea .infoArea .footerMenu li:last-child{margin-right:0;padding-right:0}
	.footerArea .infoArea .footerMenu li:last-child:after{display:none}
	.footerArea .infoArea .footerMenu li a{display:block;height:16px;line-height:1;font-size:15px;color:#555555}
	.footerArea .infoArea .footerMenu li a.point{color:#26487c}
	.footerArea .callArea{float:right;display:flex;}
	.footerArea .callArea .callCt{letter-spacing:-1px}
	.footerArea .callArea .callCt + .callCt{margin-left:65px}
	.footerArea .callArea .callCt .txTi{margin-bottom:15px}
	.footerArea .callArea .callCt .txTi strong{display:block;height:22px;line-height:1;font-weight:600;font-size:20px;color:#000000}
	.footerArea .callArea .callCt .txTi span{font-size:16px}
	.footerArea .callArea .callCt .txCall{}
	.footerArea .callArea .callCt .txCall strong{display:block;margin-bottom:5px;height:25px;line-height:22px;font-weight:600;font-size:31px}
	.footerArea .callArea .callCt .txCall strong.cOrg{color:#ee5a00}
	.footerArea .callArea .callCt .txCall strong.cBlue{color:#047db5}
	.footerArea .callArea .callCt .txCall span{font-size:14px}
	.footerArea .snsArea{position:absolute;left:450px;top:99px;}
	.footerArea .snsArea li:first-child{margin-left:0}
	.footerArea .snsArea li{display:inline-block;margin-left:3px;}
	.footerArea .snsArea li a{display:block;width:42px;height:42px}
	.footerArea .snsArea li a img{vertical-align:top}
	.footerArea .footerTxt{margin-top:30px;color:#777777}
	.footerArea .footerTxt .line{display:inline-block; width:1px; height:13px; background:#e5e5e5;margin:5px 3px 0 5px; vertical-align:top;}
	.footerArea .footerTxt .copyright{ color:#999999; display:block; margin-top:3px;}
	.footerArea .bottomLogo{ position:absolute; right:0; top:81px;}
	.footerArea .bottomLogo li{ float:left; margin-left:7px;}
	/* Footer - 수상 영역 /202005 */
	.awardArea{padding:22px 0 60px;border-top:1px solid #eeeeee}
	.awardArea ul.bottomLogo{display:flex;justify-content:space-between;margin:0 auto;width:$footer_width}
	.awardArea ul.bottomLogo li a{display:block}
}