@charset "utf-8";

/**
* layout.footer
* ------------------
*/


$footer_position: 11px;

.main_footer{
	position:fixed;left:0;right:0;bottom:0;height:$footer_height;
	background-color:#fff; box-shadow: 0px 0px 15px 10px rgba(0,0,0,0.08), 0 1px 0 -20px rgba(0,0,0,0.08);
	.nav{ margin: 0 8px;
		&::after{content:"";display:block;clear:both;}
		li{position:relative;float:left;width:25%;
			& a{position:relative;display:block;padding-top:34px;text-align:center;height:$footer_height}
			& a span{position: relative;display:inline-block;margin-top: 0px;font-size:9px;color:#c3c3c3;}
		}

		li:nth-of-type(1){background:url($svg-footer-class) center $footer_position no-repeat;background-size: 24px 24px;}
		li:nth-of-type(2){background:url($svg-footer-community) center $footer_position no-repeat;background-size: 24px 24px;}
		li:nth-of-type(3){background:url($svg-footer-touch) center $footer_position no-repeat; background-size: 24px 24px;}
		li:nth-of-type(4){background:url($svg-footer-my) center $footer_position no-repeat; background-size: 24px 24px;}

		li.on a span{color:#fff;}
		li.on a span:after{ content:'';position: absolute;width: 4px;height: 4px; background-color: #000; border-radius:25px;left: 50%; top:50%; margin-left: -2px;margin-top: -2px;}
		li.on:nth-of-type(1){background:url($svg-footer-class-on) center $footer_position no-repeat; background-size: 24px 24px;}
		li.on:nth-of-type(2){background:url($svg-footer-community-on) center $footer_position no-repeat; background-size: 24px 24px;}
		li.on:nth-of-type(3){background:url($svg-footer-touch-on) center $footer_position no-repeat; background-size: 24px 24px;}
		li.on:nth-of-type(4){background:url($svg-footer-my-on) center $footer_position no-repeat; background-size: 24px 24px;}
	}
}
