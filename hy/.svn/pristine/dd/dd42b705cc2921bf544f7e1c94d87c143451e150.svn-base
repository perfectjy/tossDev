	$(function(){
	    $(".tabWrap .tabCon").addClass("on").css({"height":0,"overflow":"hidden"});
	    $(".tabWrap .tabCon").eq(0).css({"height":"auto","overflow":"hidden"});
        //2017-12-04수정
        $(".customSlidimgArea").each(function(){
            var _this = $(this);
            var target = $(this);
            target.find(".customSlidePrev").on("click",function(){
                if(target.find(".swiper-slide-active").index() == 0){
                    var idx = $(".customSlidTab li.on").index()-1;
                    if(idx >= 0){
                        $(".customSlidTab li").eq(idx).find("a").click();
                    }

                }
            })
            target.find(".customSlideNext").on("click",function(){
                console.log(target.find(".swiper-slide-active").index());
                if(target.find(".swiper-slide-active").index() == target.find(".swiper-slide").length-1){
                    var idx = $(".customSlidTab li.on").index()+1;
                    $(".customSlidTab li").eq(idx).find("a").click();
                }
            })

            var swiper = new Swiper(target, {
                nextButton: _this.find('.customSlideNext'),
                prevButton: _this.find('.customSlidePrev'),
                pagination: _this.find('.customSlideBtn'),
                wrapperClass: 'swiper-wrapper',
                slideClass: 'swiper-slide',
                paginationElement: 'a',
                paginationClickable : true
            })
        })
		setTimeout(function(){
            $(".tabWrap .tabCon").removeClass("on").css({"height":"auto","overflow":"hidden"}).eq(0).addClass("on");
		},500)

	})
</script>
