  //보험료 선택 fixed
   const contentFixed = function () {
      let doc = $(document),
          fixed = false,
          anchor = $('.anchor'),
          content = $('.fixed_item');

        let onScroll = function () {
          let docTop = doc.scrollTop() + 92,
          anchorTop = anchor.offset().top;

        if (docTop > anchorTop) {
          if (!fixed) {
            anchor.height(content.outerHeight());
            content.addClass('fixed');
            fixed = true;
          }
        }
        else {
          if (fixed) {
            anchor.height(0);
            content.removeClass('fixed');
            fixed = false;
          }
        }
      };
      $(window).on('scroll', onScroll);
    };

    const demo = new contentFixed($('.sticky_area'));
	});
</script>
