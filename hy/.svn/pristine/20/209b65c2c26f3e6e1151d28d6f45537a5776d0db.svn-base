@charset "utf-8";

/**
* layout.quick
* ------------------
*/

#quick{position:fixed;top:152px;right:10px;
	&.ab{position:absolute}
	ul{width:101px;}
	ul li{position:relative;margin-bottom:6px;width:101px;height:102px;-webkit-box-sizing:border-box;-moz-box-sizing:border-box;box-sizing:border-box}
	ul li:last-child{margin-bottom:0}
	ul li a{display:block;text-align:center;width:100%;height:102px;-webkit-box-sizing:border-box;-moz-box-sizing:border-box;box-sizing:border-box;text-align:center}
	ul li a img{vertical-align:top}
	ul li.top{height:36px}
	ul li.top a{margin:0 auto;width:36px;height:36px}
}