<script>
  $(function () {
    UI.init();

    // 보험료 플랜 옵션 선택
    function selectInsuranceFee() {
      $('.plan_menu').each(function () {
        const menuOptions = $(this).find('.plan_menu_option');

        menuOptions.on('click', function () {
          const idx = menuOptions.index(this);

          menuOptions.removeClass('on');
          $(this).addClass('on');

          $('.plan_list_item').each(function () {
            $(this).find('.form_wrap').removeClass('on');
            $(this).find('.form_wrap').eq(idx).addClass('on');
          });
        });

        if ($(this).hasClass('only')) {
          $(this).find('> div').not('.on').hide();
        }
      });
    }

    // 보험료 플랜 메뉴 fixed
    function fixContent() {
      const doc = $(document),
            anchor = $('.anchor'),
            content = $('.fixed_item');

      function onScroll() {
        const docTop = doc.scrollTop() + 92,
              anchorTop = anchor.offset().top;

        if (docTop > anchorTop) {
          if (!content.hasClass('fixed')) {
              anchor.height(content.outerHeight());
              content.addClass('fixed');
          }
        } else {
          if (content.hasClass('fixed')) {
              anchor.height(0);
              content.removeClass('fixed');
          }
        }
      }

      $(window).on('scroll', onScroll);
    }

    selectInsuranceFee();
    fixContent();
  });
</script>
