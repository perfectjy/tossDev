/* 이름랭킹 */
.custForm.widAll {width:100%;}
.rankView .rankList .first {color:#066bfd; font-weight: 500;}











/* 금융소비자보호 -(탭)체계, (탭)금융소비자권리  */
.cnsInfoBox h3 {position:relative; padding-left:12px; margin-bottom:12px;}
.cnsInfoBox h3::before {position:absolute; content:''; top:9px; left:0; width:4px; height:4px; background-color:#444; border-radius: 50%;}

/* 금융소비자보호 - (탭)민원접수 */
p.listLine {position:relative; padding-left:22px; line-height: 22px; }
p.listLine::before {position:absolute; content:''; top:11px; left:12px; width:4px; height:1px; background-color:#444;}
dl.listNum {position: relative; padding-left:12px;}
dl.listNum dt{float:left;}


/* 고객센터 */

.ui-allim.scroll { height:216px; padding:20px 15px; background: #fafafa; overflow-y: auto;}

/* //고객센터 */





/* PC */
/* 보안프로그램설치안내  */
.pweb .btns .btn.ics {width: auto; height: 44px; padding: 0 25px; border: 1px solid #0155c3; background: #0155c3; line-height: 36px; border-radius: 8px; }
.pweb .btns .btn.ics span {font-size: 15px; color: #fff;}
.pweb .btns .btn.ics span:before {padding-left:-5px;}




/* 사장님 신용관리 - 서비스 소개 */
.creditTit {font-size:13px; margin-bottom: 20px;}
.creditInfo {font-size:13px; line-height: 22px;}
.grayBox { background:#f9f9f9; padding: 27px 25px; border-radius: 15px;}
.bannerItem {height:280px; margin-top:19px;}
.imgScale {display: block; text-align: center; margin-top:38px;}
.imgScale img {width:50%;}

.cimList {display:flex; justify-content: center; margin-top:44px;}
.cimList >li {width:99px; height:99px; background:#eaf1ff; border-radius: 50%; margin: 0 -7px;}


/* 사장님 신용관리 - 사업장 가맹점 정보 */

.salesInfo .salesGraphTop{display:flex; margin:40px 0 20px 0;}
.salesInfo .salesGraphTop > div {display: inline-block; width: 65px; height: 65px; background: #eff2f8; border-radius: 50%; margin-right:15px;}
.salesInfo .salesGraphTop p {font-size:16px; font-weight: 700; line-height: 30px; color:#222;} 
.salesInfo .verBarGraph {margin: 0 64px;}

/* 사장님 신용관리 - 신용정보상세 */
.accoTitle .num{float:right; margin-right:30px;}
.cardInfo .cardInfoTit {display:block; font-size:15px; font-weight: 700;}
.cardInfo .cardInfoTit select{border: 0; width: 58px; padding-left: 0;}


.cardInfo div{display:flex; justify-content:space-between; flex-wrap: wrap; font-size: 14px; line-height: 22px;}
.cardInfo div:not(:first-child) {margin-top:14px;}
.cardInfo div strong {display:block; width:100%; font-size:15px; font-weight: 700;}
.cardInfo div strong select{ border: 0; width: 58px; padding-left: 0;}
.cardInfo div dt{width:50%; color:#767676;}
.cardInfo div dd{width:50%; color:#444; text-align: right;}