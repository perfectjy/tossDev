          <div class="governing">
            <h2 class="governingTitle">반려견 색상을 선택하세요</h2>
          </div>

          <div class="colorSelect">
            <ul class="colorSelectList">
              <li class="checked">
                <div class="brown">
                  <input type="radio" id="c01" checked="checked">
                  <label for="c01">갈색</label>
                </div>
              </li>
              
              <li>
                <div class="black">
                  <input type="radio" id="c02">
                  <label for="c02">검은색</label>
                </div>
              </li>
              
              <li>
                <div class="yellow">
                  <input type="radio" id="c03">
                  <label for="c03">노란색</label>
                </div>
              </li>
              
              <li>
                <div class="beige">
                  <input type="radio" id="c04">
                  <label for="c04">베이지색</label>
                </div>
              </li>
              
              <li>
                <div class="blackBullet">
                  <input type="radio" id="c01">
                  <label for="c01">블랙탄</label>
                </div>
              </li>
              
              <li>
                <div class="rainbow">
                  <input type="radio" id="c01">
                  <label for="c01">여러색조합</label>
                </div>
              </li>

              <li>
                <div class="orange">
                  <input type="radio" id="c01">
                  <label for="c01">주황색</label>
                </div>
              </li>
              
              <li>
                <div class="maroon">
                  <input type="radio" id="c01">
                  <label for="c01">적갈색</label>
                </div>
              </li>
              
              <li>
                <div class="blue">
                  <input type="radio" id="c01">
                  <label for="c01">파란색</label>
                </div>
              </li>
              
              <li>
                <div class="gray">
                  <input type="radio" id="c01">
                  <label for="c01">회색</label>
                </div>
              </li>
              
              <li>
                <div class="brown">
                  <input type="radio" id="c01">
                  <label for="c01">갈색</label>
                </div>
              </li>
              
              <li>
                <div class="darkBrown">
                  <input type="radio" id="c01">
                  <label for="c01">흑갈색</label>
                </div>
              </li>

              <li>
                <div class="partridge">
                  <input type="radio" id="c01">
                  <label for="c01">황갈색</label>
                </div>
              </li>

              <li>
                <div class="taupe">
                  <input type="radio" id="c01">
                  <label for="c01">회갈색</label>
                </div>
              </li>
