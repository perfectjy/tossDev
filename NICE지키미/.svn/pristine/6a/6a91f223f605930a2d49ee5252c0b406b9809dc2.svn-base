.listAsterisk {margin-top:15px;}
.listAsterisk > li, p.listAsterisk  {position:relative; padding-left:12px; line-height: 22px; }
.listAsterisk > li:before,
p.listAsterisk:before {position:absolute; content:'*'; top:4px; left:0; width:4px; height:4px;}
.listAsterisk > li:not(:first-child) {margin-top:10px;}
.tableWrap.center {text-align:center;}
.tableWrap.center table thead {border-bottom:1px solid #d4d4d4;}
.tableWrap.center table th {text-align:center;}
.tableWrap.center table td:first-child {border-left:none;}

/* 고객선터 > 서비스문의 */
.tabConts .uiAccoWrap + .formWrap {margin-top:38px;}
.infoTxt {padding-left:5px; margin-top:10px; font-size:12px; color:#444;}
.infoTxt::before {content:''; display:inline-block; width:4px; height:4px; margin-right:11px; vertical-align:middle; border-radius:50%; background:#444;}
.inqList li:not(:first-child) {margin-top:10px;}
.inqList li a {position:relative; display:inline-block; width:100%; padding:14px 24px; border:1px solid #eee; border-radius:12px;}
.inqList li a .qnaTagStatus {display:inline-block; height:22px; padding:0 10px; min-width:55px; border-radius:4px; background:#767676; color:#fff; font-size:13px; font-weight:500; text-align:center;}
.inqList li a .qnaTagStatus.complete {background-color:#066bfd;}
.inqList li a:after{content: ''; position: absolute; right:14px; top:50%; width: 24px; height: 24px; background:url(../../img/bzw/common/ico/ico_acco_arr.png) no-repeat; background-size: 100%; transform:translateY(-50%) rotate(-90deg);}
.inqList .contTxt {display:block;  margin:15px auto 6px; font-size:16px; font-weight: 700; color:#222;}
.inqList .data {display:block; color:#767676;}

/* 고객선터 > 신용상담신청 */
.priAgree {padding-top:30px; display:block;}
.priAgree + .uiAccoWrap.srvInfo {margin-top:30px;}
.priAgree .inpBtn{position:relative; display:inline-block; width:20px; height:20px; vertical-align:text-bottom;}
.priAgree .inpBtn:after {position:absolute; left:7px; top:5px; content: ''; width:7px; height:7px; border-top:2px solid #222; border-right: 2px solid #222; transform: rotate(45deg);}
.uiAccoWrap.srvInfo .listDot strong {display:block; margin-top:10px; color:#444; font-weight:700;}


/* 미소짓는 데이터생활 > 소비자보호 */
.perCreditSlider {margin-bottom:15px;}
.perCreditSlider li {height:260px;}
.perCreditSlider [class^=slideItem] {position:relative; width:100%; margin:0 auto; height:260px; max-height:100%; background:#fff url(../../img/bzw/common/bg/bg_phone.png) no-repeat 50% 50% /280px auto;}
.wordBalloonBox {position:absolute; bottom:0; right:0; width:200px; height:120px; background:url(../../img/bzw/common/bg/bg_balloon.png) no-repeat right bottom  / 200px 120px;}
.wordBalloonBox p {display:inline-block; padding:15px;}

/* 미소짓는 데이터생활 > 신용평점체계공시(개인/개인사업자)*/
.selectBox + .tabWrap {margin-top:25px;}
.creditScoreInfo .h3 {margin-bottom:13px;}
.creditScoreInfo .h4 {font-weight:500;}
.creditScoreInfo .creditScorebox:not(:first-child){margin-top:15px;}
.creditScoreInfo .listDot strong {color:#222; font-weight:700;}
/* .creditScoreInfo .creditScorebox:last-child{margin-bottom:16px;} */
.creditScorebox {padding:18px 25px; border:1px solid #d4d4d4; border-radius:12px; background-color:#f9f9f9;}
.creditScorebox h4 {margin-bottom:8px;}
.creditScorebox li > .title {color:#444; font-weight:700;}
.creditScorebox li > .txt {color:#444;}
.creditScorebox + .listDot {margin-top:16px;}
.flowlist {display:flex; margin:30px 0; align-content:space-between; justify-content:center; gap:20px; flex-wrap:wrap;}
.flowlist li {flex:none; width:calc(50% - 10px); height:142px; padding:15px 15px;  background-color:#f5f8ff; border-radius:12px; box-sizing:border-box;}
.flowlist li * {display:block; font-size:12px;}
.flowlist li .title,
.flowlist li em  {font-weight:700; color:#066bfd;}
.flowlist li em {margin-top:5px;}
.flowlist li .txt {margin-top:7px; color:#767676;}
.flowlist li.center {position:relative; width:100%; height:151px; padding:0; border-radius:0; background-image:url(../../img/bzw/common/bg/bg_nice.png); background-repeat:no-repeat; background-color:none; background-size:100%;}
.flowlist li.center > span {position:absolute; left:50%; bottom:13px; display:block; text-align:center; color:#fff; font-weight:700; font-size:13px; transform:translateX(-50%);}
.creditScorebox div {display:flex; justify-content:space-between;}
.creditScorebox dl dt {color:#767676; font-size:15px;}
.creditScorebox dl dd {width:150px; padding-left:19px; text-align:right; font-size:15px; color:#222; font-weight:700;}
.arrowWrap {margin-bottom:20px;}
.arrowWrap span {display:block; padding-left:16px;}
.listTable:not(:first-child) {margin-top:46px;}
.tableWrap .listDash {margin-top:20px;}

