<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="euc-kr">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NICE지키미</title>
  <script src="../../../js/zkm/rzm/jquery-1.11.3.js"></script>
  <script src="../../../js/zkm/rzm/jquery-ui.min.js"></script>    
  <script src="../../../js/zkm/rzm/ui.common.js"></script>

  <link rel="stylesheet" href="../../../css/zkm/rzm/common.css">

  <script type="text/javascript">
    mbHeader = { title: '신용상담신청', prev: true, menu: true};

    $(function() {        
      modal.openModal('#modalid5');
    });
  </script>
</head>
<body>
  <div id="wrap">
    <div id="skipNavi"> 
      <a href="#content">본문내용 바로가기</a> 
    </div>
    <!-- header -->    
    <script type="text/javascript" src="../../../bzw/inc/header.js"></script>
    <script type="text/javascript" src="../../../bzw/inc/breadcrumbs.js"></script>
    <!--// header -->

    <!-- container -->
    <div id="container">
      <div id="content">
        <div class="section">
          <a href="#modalid5" class="btn base modalOpen">[팝업]주행거리 선택</a>
        </div> 
      </div>
    </div>
    <!--// container -->

    <!-- popup -->
    <div class="uiModal bottom" id="modalid5">
      <div class="modalWrap">
        <button type="button" class="uiBtn typeModalClose"><span class="hidden">닫기</span></button>
        <div class="modalHeader">
          <h1 class="rIcon driven"><strong class="pColor">나신용</strong>님 내 차 주행거리를 선택해주세요</h1>
        </div>
        <div class="modalContent">
          <div class="inner">
            <!-- content -->
            <div class="rangeWrap">
              <div class="rangeBox bgKm">
                <i class="rangeAnchor car"></i>
                <input type="range" value="20" min="0" max="100">
              </div>
              <div class="rangeSec">
                <span>0</span>
                <span>10만</span>
                <span>20만</span>
              </div>
              <p class="resTxt">1만 km 미만</p>
              <script>
                rangeBar($('input[type=range]'))

                $('input[type=range]').on('input', function(){
                  rangeBar($(this))
                });

                function rangeBar(inp) {
                  var val = $(inp).val();
                  var ancher = $(inp).siblings('.rangeAnchor');
                  $(inp).css('background', 'linear-gradient(to right, #066bfd 0%, #066bfd '+ val +'%, #eef3f7 ' + val + '%, #eef3f7 100%)');
                  $(ancher).css('left', val + "%")
                }

              </script>
            </div>
            <!--// content -->
          </div>
          <div class="modalBottom">
            <div class="btns">
              <button type="button" class="btn primary"><span>확인</span></button>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--// popup -->

    <!-- footer -->
    <script type="text/javascript" src="../../../bzw/inc/footer.js"></script>
    <!--// footer -->
  </div>
</body>
</html>
