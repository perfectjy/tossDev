  <link rel="stylesheet" href="../../../css/zkm/rzm/common.css">
  <script type="text/javascript">
    mbHeader = { title: '소비현황', prev: true, menu: true };
    $(function () {
        $('.infoToggle.date').each(function() {
            var $btn = $(this).find('.infoTogBtn');
            $btn.on('click', function(){
                if($btn.html() === '달력접기') {
                    $(this).html('달력보기');
                } else {
                    $(this).html('달력접기');
                }
            });
        });
    });
  </script>
</head>

<body>
    <div id="wrap">
        <div id="skipNavi"> 
