                    <script>
                        $(document).ready(function() {
                            var queAnswer = {
                                gTarget: null,
                                gTargetString: null,
                                gParent: null,
                                gTitle: null,
                                gSelWrap: null,
                                gSelItem: null,
                                gTargetNext: null,
                                flag : null,
                                num: 1,
                                selectAnswer: function(v) {
                                    var o = this;
                                    o.flag = $(v.target).is('[data-quiz-answer=bingo]');
                                    o.gTitle.hide();
                                    o.gSelWrap.hide();
                                    o.gParent.attr('data-quiz-next', 'prev');
                                    o.gTarget.find('[data-quiz-result='+o.flag+']').show();
                                    o.num = parseInt(o.gTargetString.substr(o.gTargetString.length-1,1)) + 1;
                                    if(o.flag) {
                                        o.gTargetNext.show();
                                        queAnswer.init('question-' + o.num);
                                    }
                                },
                                init: function(v) {
                                    var o = this;
                                    o.gTarget = $('[data-quiz='+ v +']');
                                    o.gTargetString = v;
                                    o.gParent = o.gTarget.parent('[data-quiz-next]');
                                    o.gTitle = o.gTarget.find('[data-quiz-title=title]');
                                    o.gSelWrap = o.gTarget.find('[data-quiz-select=select]');
                                    o.gSelItem = o.gSelWrap.find('[data-quiz-answer]');
                                    o.gTargetNext = o.gParent.next('[data-quiz-next=next]');

                                    o.gParent.attr('data-quiz-next', 'current');

                                    o.gSelItem.off('change.quiz').on('change.quiz', function(v) {
                                        o.selectAnswer(v);
                                    })
                                }
                            }
                            queAnswer.init('question-1');
                        });
