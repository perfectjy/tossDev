								e.preventDefault();
								var gId = this.href.split('#')[1],
									$headerH = $('.headerMob').innerHeight(),
									$targetT = $('#'+gId).offset().top;
								
								if($('#'+gId).length) {
									if(isMobile) {
										$(window).scrollTop($targetT - $headerH -2);
									}
								}
							});
						});
