@charset "euc-kr";

.cusMain {background-color: #f7f7f7; padding:5px 20px 30px 20px; margin:0 -20px;}
.cusList li {margin-top:10px;}
.cusList a {display:block; padding:15px 20px; color:#87909b; font-size:13px; background-color: #fff; border-radius: 15px; box-shadow: 6px 10px 40px 0 rgba(198, 207, 219, 0.3);;}
.cusList a .variety {display:block; font-size:16px; font-weight: 700; color:#222; margin-bottom:6px;} 
.cusMain .notiBox {position:relative; margin-top:30px;}
.cusMain .notiBox h3 {font-size:14px; line-height: 20px; margin-bottom:10px; font-weight: 700; color:#222;}
.cusMain .notiBox .notiTxt {display:block; border:solid 1px #dcdff1; border-radius: 10px; padding:15px; font-size:14px; line-height: 24px; background-color:#fff;}
.cusMain .notiBox .btnMore {position:absolute; top:0; right:0; width:20px; height: 20;}
.cusMain .notiBox .btnMore:before {position:absolute; content:''; width:10px; height:2px; background-color: #000; top:9px; left:5px;}
.cusMain .notiBox .btnMore:after {position:absolute; content:''; width:2px; height:10px; background-color: #000; top:5px; left:9px;}

.cusHelp {margin-top:45px;}
.cusHelp h3 {font-size:14px; line-height: 20px; margin-bottom:10px; font-weight: 700; color:#222;}

.mobile .bottomQuickMenu{display:flex; justify-content:space-between;}
.bottomQuickMenu>li{flex:1; height:95px; margin-right:10px; border:1px solid #dcdff1; border-radius:15px;}
.bottomQuickMenu>li:last-child{margin-right:0;}
.bottomQuickMenu>li a{display:block; padding:12px 0 18px; color:#87909b; font-size:14px; text-align:center;}
.bottomQuickMenu>li [class^='ico'] span{position:relative; display:inline-block; padding-top:47px; line-height:14px; letter-spacing:-.5px;}
.bottomQuickMenu>li [class^='ico'] span::before{content:''; position:absolute; left:50%; top:0; display:inline-block; width:40px; height:40px; background:url(../../img/bzw/common/btn/btn_btm_quickmenu.png) no-repeat; background-size:120px 40px; transform:translateX(-50%);}
.bottomQuickMenu>li .icoName01 span::before{background-position:0 0;}
.bottomQuickMenu>li .icoName02 span::before{background-position:-40px 0;}
.bottomQuickMenu>li .icoName03 span{padding-top:40px;}
.bottomQuickMenu>li .icoName03 span::before{background-position:-80px 0;}

.bottomQuickMenu>li [class^='pet'] span{position:relative; display:inline-block; padding-top:47px; line-height:14px; letter-spacing:-.5px;}
.bottomQuickMenu>li [class^='pet'] span::before {content:''; position:absolute; left:50%; top:0; display:inline-block; width:40px; height:40px; transform:translateX(-50%); }
.bottomQuickMenu>li .pet01 span::before {background:url(../../img/bzw/common/btn/iconPetList_01.png) no-repeat; background-size:contain;}
.bottomQuickMenu>li .pet02 span::before {background:url(../../img/bzw/common/btn/iconPetList_02.png) no-repeat; background-size:contain;}
.bottomQuickMenu>li .pet03 span::before {background:url(../../img/bzw/common/btn/iconPetList_03.png) no-repeat; background-size:contain;}





























