@charset "euc-kr";

/* common */
.txt01{color:#222; font-size:15px; line-height:24px;}
.pointColor{color:#066bfd;}

/* governingTitle */
.governing.tc{text-align:center;}
.governing .governingTit01{font-size:21px; font-weight:600; letter-spacing:-1px; line-height:30px;}
.governing .governingText{font-size:18px; font-weight:600; line-height:30px;}
.governing .governingForm{display:inline-flex; width:112px;}
.governing .governingForm input[type=text]{padding:0; font-size:18px; border:0; border-radius:0;}
.governing .governingForm input[type=text]::-webkit-input-placeholder{color:#d4d4d4;}
.governing .governingForm .inp{position:relative; border-bottom:1px solid #707070;}
.governing .governingForm .inp.firstName{width:60px; padding-right:10px;}
.governing .governingForm .inp.firstName::after{content:'/'; position:absolute; right:3px; top:5px; display:inline-block; font-size:18px; color:#d4d4d4; line-height:40px;}

/* button */
.mobile .btnConts{margin-top:40px;}

/* select */
.selectLine{position:relative; display:inline-block; line-height:40px;}
.selectLine select{box-sizing:border-box; height:40px; padding:0 25px 0 0; border-bottom:1px solid #707070; background:url(../../img/bzw/common/ico/ico_select_arr.png) right center no-repeat; background-size:23px;-webkit-appearance:none;-moz-appearance:none;appearance:none}

/* text */
.guideText{margin-top:32px; text-align:center; line-height:24px; letter-spacing:-1px;}
.guideText strong{color:#222; font-size:18px; font-weight:600;}
.formText01{margin-top:20px; line-height:1; color:#767676; font-size:14px;}

/* 데이터놀이 - 이름분석 */
.analyzeNameImg{width:295px; height:295px; margin:20px auto 0; background:url(../../img/bzw/@tmp/@tmp_dataplay.png) no-repeat; background-size:296px;}
dl.keywordName{display:flex; margin-top:20px;}
dl.keywordName dt{font-size:14px; margin-right:15px;}
dl.keywordName dd{overflow-x:scroll; width:calc(100% - 70px); float:left;}
dl.keywordName .keywordList>li{display:inline;}
dl.keywordName .keywordList>li:not(:last-child){margin-right:10px;}
dl.keywordName .keywordList>li a{color:#87909b; text-decoration:underline;}

