@charset "euc-kr";
 
/* 고객센터 */
.ui-allim.scroll { height:216px; padding:20px 15px; background: #fafafa; overflow-y: auto;}


/* 사장님 신용관리 - 서비스 소개 */
.mcmTitBox {margin-bottom:15px;  color:#222;}
.mcmTitBox .tit {font-size:21px; line-height: 30px; font-weight: 700;}
.mcmTitBox .txt {font-size:13px; line-height: 22px; margin-top:16px;}
.mcmTitBox .txt.caution {color:#d50f3c;}
.mcmTitBox .txt.date {margin-top:12px; color:#066bfd;}

.mcmContBox {margin-top: 40px;}
.comp .mcmContBox {margin-top: 0px;}
.mcmContBox h3 {font-size:15px; font-weight: 700; line-height: 23px;}
.mcmContBox .subTxt {font-size: 17px; line-height: 30px; color:#222; margin-top:4px;}
.mcmContBox .grayBox { background:#f9f9f9; padding: 27px 25px; border-radius: 15px; margin-top:34px;}
.mcmContBox .mcmInfo {font-size:13px; line-height: 22px; margin-top:18px;}
.cimBanner {height:280px; margin-top:19px;}



.cimList { display:flex; justify-content: center; align-items: center; margin-top:38px; height:150px; }
.cimList >li {width:99px; height:99px; background:#eaf1ff; border-radius: 50%; margin: 0 -7px;}
.imgScale {display: block; text-align: center; margin-top:38px; height:171px;}
.imgScale img {width:50%;}




/* 사장님 신용관리 - 사업자 관리 */
.lineSetBox {position:relative; margin-top:26px;}
.lineSetBox li {position:relative; display:flex; flex-direction: column; border:1px solid #d4d4d4; border-radius: 15px; padding: 21px 20px; overflow:hidden;}
.lineSetBox li:not(:first-child) {margin-top:14px;}
.lineSetBox li strong {font-size:16px; line-height: 24px; color:#222;}
.lineSetBox li span {font-size:13px; line-height: 25px; color:#767676; }
.lineSetBox li a {position:absolute; top:0; left:0; right:0; bottom:0;}
.lineSetBox li .link:after {content:''; position: absolute; right: 28px; top: 50%; width: 8px; height: 8px; border-top: 2px solid #bababa; border-right: 2px solid #bababa; transform: rotate(45deg) translateY(-50%);}
.lineSetBox li.setBtn {position:absolute; right:0; top:-58px; width:45px; height:30px; line-height: 28px; border: 1px solid #444; border-radius: 8px; padding:0; margin-top:0;}
.lineSetBox li.setBtn span {color:#222;}



/* 사장님 신용관리 - 사업장 설정 */
.lineSetBox.set li {padding-left:52px;}
.lineSetBox.set li button.delete{position:absolute; top:50%; transform:translateY(-50%); left:20px; width:24px; height:24px; background:#066bfd; border-radius: 50%;}
.lineSetBox.set li button.delete::before {content:''; position:absolute; left:6px; top:11px; width:12px; height:2px; background:#fff; border-radius: 1px; }
.lineSetBox.set li button.change {position:absolute; top:50%; transform:translateY(-50%); right:20px; padding:12px 8px;}
.lineSetBox.set li button.change >div {width:20px; height:2px; background:#767676; border-radius: 1px;}
.lineSetBox.set li button.change >div:first-child {margin-bottom:3px;}
.lineSetBox.set li a {display:none;}



/* 사장님 신용관리 - 사업자등록 */
.mcm.grayWrap .inner{padding: 35px 0; margin-bottom:45px;}
.mcm.grayWrap .btnWrap {margin-top:40px;}
.lineFormSearch .custForm.noline:after {border-bottom:0;}



/* 사장님 신용관리 - 사업장 가맹점 정보 */
.storePhoto {position:absolute; right:11px; bottom:0; display: inline-block; width:75px; height: 60px; border-radius: 50%; }
.storePhoto img {width:100%;}

.scoreResult .salesGraphInfo {display:flex; justify-content: start; align-items: center;}
.scoreResult .salesGraphInfo .scoreArrow {display:inline-block; width:44px; height:50px; margin: 0 18px;}
.scoreResult .salesGraphInfo .scoreArrow img {width:100%;}
.scoreResult .salesGraphInfo .scoreTxt {font-size:16px; font-weight: 700; line-height: 22px;}
.scoreResult .verBarGraph {margin:15px 64px 0 64px;}
.scoreResult .verBarGraph em, 
.scoreResult .verBarGraph .primary em{ color:#767676;}
.scoreResult .verBarGraph .primary em::before {content:'~'; position:absolute; left:-4px; top:4px;}



/* 사장님 신용관리 - 서비스 소개 */
.scrollmenu {position:relative; left:0; right:0; top:0; margin:0px -4px; overflow:hidden;}
.scrollmenu >li {display:inline-block;vertical-align:top;padding:0 4px;}
.scrollmenu >li a {display:block;height:42px; line-height:42px;padding:0 14px;font-size:16px;border-radius:21px;background:#f5f5f5;}
.scrollmenu >li.active a, 
.scrollmenu >li a.on {background-color:#3587ff;color:#fff;}



/* 사장님 신용관리 - 사업장 신용관리 */
.borderWrap {border:1px solid #d4d4d4; border-radius: 15px; padding:20px 28px 20px 25px; margin-top:15px;}
.borderWrap h3 {font-size:16px; color:#222; margin-bottom:22px;}

.creditScore {position:relative; display:flex; justify-content:space-between;}
.creditScore >div { font-size:13px;}
.creditScore >div:first-child {border-right: 1px solid #eee; padding-right:30px;}
.creditScore >div span {font-size:32px;}
.creditScore >div .score{position:relative; bottom:4px; font-size:14px; color:#fff; width:40px; height:22px; background:#0062ff; border-radius: 11px; padding:3px 10px; margin-left:8px;}
.creditScore >div .score::before {content:''; display:inline-block; width: 11px; height:9px; margin-right:4px;}
.creditScore >div .score.up::before {background:url(../../../img/zkm/bzw/common/ico/ico_arr_up.png) no-repeat; background-size:contain;}
.creditScore >div .score.down::before {background:url(../../../img/zkm/bzw/common/ico/ico_arr_down.png) no-repeat; background-size:contain;}
.creditScore .link:after {content: ''; position: absolute; right: 0px; top: 50%; width: 8px; height: 8px; border-top: 2px solid #bababa; border-right: 2px solid #bababa; transform: rotate(45deg) translateY(-50%);}

.btnConts.under {margin-bottom: 50px;}

.boxList strong{display: block; font-size:16px; font-weight: 700; color: #222; padding:3px 0; }
.boxList span {display:block; font-size:13px color#767676; padding: 3px 0;}
.boxList li {position:relative;}
.boxList li .link {position:absolute; top:0; right:0; bottom:0; left:0;}
.boxList li .link:after {content: ''; position: absolute; right: 8px; top: 50%; width: 8px; height: 8px; border-top: 2px solid #bababa; border-right: 2px solid #bababa; transform: rotate(45deg) translateY(-50%);}
.graphPhoto {width:192px; margin:34px auto;}
.graphPhoto img {width:100%;}

.boxList.icon li {padding:10px 0 10px 70px;}
.boxList.icon li:before{content:''; position:absolute; left:0; top:6px; width:55px; height:55px; border-radius: 50%; border:1px solid #eee;}
.boxList.icon strong{font-size:15px; color:#222;}
.boxList.icon span {font-size:14px; color:#444;}
.boxList.icon span em {margin-right:5px;}



/* 사장님 신용관리 - 사업장 스코어 상세 */
.mcmPhoto {height:231px; background:#eff2f8; margin-top:28px;}
.mcmPhoto img {width:100%;}

.scoreResult .emo {position:relative; font-size:16px; line-height: 23px; padding:5px 0;}
.scoreResult .emo::before {content:''; position:absolute; top:0px; right:-40px; width:30px; height: 45px; }
.scoreResult .emo.good::before {background:url(../../../img/zkm/bzw/sub/ico_Semo01.png) no-repeat; background-size: contain;}
.scoreResult .emo.soso::before {background:url(../../../img/zkm/bzw/sub/ico_emo02.png) no-repeat; background-size: contain;}



/* 사장님 신용관리 - 사업장 신용컨설팅 */
.mcmTabBox {margin-bottom:34px;}
.mcmTabTit {font-size:19px; font-weight: 700; line-height: 30px;margin-top:36px;}
.mcmTabTit .tagList {display:inline-block; position:relative; top:4px; left:15px;}

.crsBox {display:flex; justify-content:flex-start; align-items: center; background:#eff2f8; padding:30px 25px; border-radius: 15px; margin:26px 0 40px 0;}
.crsBox .crsIcon {display: flex; justify-content: center; align-items: center; width:77px; height:75px; border-radius: 50%; background:#fff; margin-right:25px; overflow:hidden; }
.crsBox .crsIcon img {width: 50%;}
.crsBox .crsTxt strong{display:block; font-size: 14px; font-weight: 500; color:#222; margin-bottom:11px;}
.crsBox .crsTxt dl {display:flex;}
.crsBox .crsTxt dl div {font-size:13px; color:#222;}
.crsBox .crsTxt dl div:not(:first-child) {margin-left:17px;}
.crsBox .crsTxt dl div dt {margin-bottom: 4px;}
.crsBox .crsTxt dl div dd.num {font-size:17px; font-weight: 700; }

.crsInfoList {margin-top:19px;}
.crsInfoList li{border: 1px solid #d4d4d4; padding: 22px 25px 26px 25px; border-radius: 15px;}
.crsInfoList li:not(:first-child) {margin-top: 15px;}
.crsInfoList li strong{font-size: 16px; font-weight: 700; line-height: 30px; color:#222;}
.crsInfoList li >div span {font-size:13px; color:#767676;}
.crsInfoList li dl div {display:flex; justify-content:space-between; font-size:14px; line-height: 22px; color:#444; margin-top:12px;}



/* 사장님 신용관리 - 신용정보 상세 */
.accoTitle .num{float:right; margin-right:30px;}

.cardInfoList .cardInfoItem:not(:first-child) {margin-top:32px;}
.cardInfoList .cardInfoItem strong {font-size:15px; font-weight: 700;}
.cardInfoList .cardInfoItem strong select {width: auto; height:30px; border: 0; font-size:15px; padding:0 35px 0 0; background:url(../../../img/zkm/bzw/common/ico/ico_acco_arr.png) no-repeat calc(100% - 10px) 5px; background-size:24px;}
.cardInfoList .cardInfoItem div {display:flex; justify-content: space-between; margin-top:12px;}
.cardInfoList .cardInfoItem div dt {color:#767676; width:35%;}
.cardInfoList .cardInfoItem div dd {color:#444; width:65%; text-align:right;}