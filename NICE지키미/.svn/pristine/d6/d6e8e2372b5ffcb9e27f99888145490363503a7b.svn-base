@charset "euc-kr";

/* °í±¤¼ö */
.colorBlue {color:#066bfd;}
.colorGray {color:#767676;}
.colorBlack {color:#222;}

.governingTxt {font-size:15px; line-height:22px; letter-spacing:-.3px; color:#767676; margin-top:12px;}
.h3Title {font-size:20px; line-height: 26px; letter-spacing: -1.2px; color:#222; font-weight: 700;}



.petRegister {position:relative; height:238px; border-radius:30px; background:linear-gradient(#29b0ff, #127ef4, #0969ef); box-shadow: 10px 10px 20px rgba(53, 135, 255, 0.3); margin-top:105px; padding:70px 0 30px 0; text-align: center;}
.petRegister::before {content:""; position:absolute;left:50%; top:-65px; transform:translateX(-50%); width:130px; height:130px; background:#fff url(../../img/bzw/emoji/16089.png) no-repeat center; background-size: 50%; border:1px solid #8e9abd; border-radius: 50%; cursor: pointer;}
.petRegister.result {position: relative;}
.petRegister.result::before {content:""; position:absolute; left: calc(50% -10px); transform:translateX(0); top:-65px; width:130px; height:130px; background:#fff url(../../img/bzw/emoji/16089.png) no-repeat center; background-size: 50%; border:1px solid #8e9abd; border-radius: 50%;}
.petRegister.result::after {content:""; position:absolute; right:calc(50% - 10px); transform:translateX(0); top:-65px; width:130px; height:130px; background:#fff url(../../img/bzw/emoji/16230.png) no-repeat center; background-size: 50%; border:1px solid #8e9abd; border-radius: 50%;}
.petRegister.petId::before {background: url();}
.petRegister .petRegisterTxt {width:100%; font-size:16px; line-height:30px; letter-spacing:-1px; color:#fff; margin-top:4px;}
.petRegister .petRegisterList {}
.petRegister .petRegisterList ul {display: flex; justify-content: center; align-items: center; gap:0 10px;}
.petRegister .petRegisterList ul li {}
.petRegister .petRegisterList ul li .register {position:relative; display:block; width:60px; height:60px; border:0; border-radius:25px; background:#fff; color:#f2f3f5; margin-top:30px;}
.petRegister .petRegisterList ul li .register.petbtn::before {content:""; position:absolute; width:30px; height:30px; left:50%; top: 50%; transform: translate(-50%, -50%); background:url(../../img/bzw/common/ico/ico_add.png) no-repeat center; background-size:50%;}
.petRegister .petRegisterList ul li span {display:block; color:#fff; margin-top:4px; cursor: pointer;}

.petRegister.nobg {border-radius:0; background:none; box-shadow: none; margin-top:105px; padding:0; text-align: center;}



.petContentBanner {margin-top:70px;}
.petContentBanner .petContentTxt {margin-top:42px; padding:25px;}
.petContentBanner .petContentTxt p {font-size:14px; line-height:24px; letter-spacing: -.7px; color:#767676; margin-top:14px;}
.petContentBanner .petContentTxt .bannerImg {width:270px; height:140px; margin-top: 17px;}
.petContentBanner .petContentTxt .bannerImg img {width: inherit;}



.myPetInfo {margin-top:15px; padding: 15px 25px 20px 25px;}
.myPetInfo .myPetTitle {display:flex; justify-content: space-between; align-items: center;}
.myPetInfo .myPetTitle .myPetName {font-size:15px; line-height: 30px; letter-spacing: -.9px; color:#222;}
.myPetInfo .myPetTitle .myPetInfoBtn {position:relative; width:55px; height:36px; border-radius: 13px; background: #1d6fdb;}
.myPetInfo .myPetTitle .myPetInfoBtn >span {font-size: 14px; line-height: 25px; letter-spacing: -.8px; color:#fff; margin-right: 12px;}
.myPetInfo .myPetTitle .myPetInfoBtn >span::before {content:""; position:absolute; right:10px; top:50%; transform:translateY(-50%); width:10px; height:17px; background:url(../../img/bzw/common/ico/ico_arr_fix.png) no-repeat center; background-size:50%;}
.myPetInfo .myPetContent {margin-top:17px;}
.myPetInfo .myPetContent .petInfoList {font-size:14px; line-height: 30px; letter-spacing: -.8px; color:#444;}
.myPetInfo .myPetContent .petInfoList .petInfoTit {}
.myPetInfo .myPetContent .petInfoList .petInfoTxt {margin-left: 24px;}
.myPetInfo .myPetContent .petInfoList .petInfoTxt .myPetCharacter {margin-right: 2px;}
.myPetInfo .myPetContent .petInfoList .petInfoTxt .myPetCharacter:last-child {margin-right: 0;}


.myPetImage {position:relative; left:50%; transform:translateX(-50%); margin: 41px 0 30px 0; display:inline-block;}
.myPetImage img {width:130px; height:130px; object-fit: contain; border: 1px solid #8e9abd; border-radius: 50%; box-shadow: 0 3px 6px rgba(53, 135, 255, 0.3);}
.myPetImage a {position: absolute; right:0; bottom: 0;;}





