@charset "euc-kr";

/* 공통 */
.listStar > li{position:relative; padding-left:12px; margin-top:10px; line-height:22px;}
.listStar > li:before {position:absolute; content:'*'; top:3px; left:0; width:4px; height:4px; color:#444; font-size:14px;}
.listDot strong {font-weight:700; color:#444;}
.listDot.mg .dash {margin-top:12px;}
.listNum.mg {margin-top:12px;}
.listNum.mg li{margin-top:0;} 

/* 고객선터 > 서비스문의 */
.infoTxt {padding-left:5px; margin-top:10px; font-size:12px; color:#444;}
.infoTxt::before {content:''; display:inline-block; width:4px; height:4px; margin-right:11px; vertical-align:middle; border-radius:50%; background:#444;}
.inqList li:not(:first-child) {margin-top:10px;}
.inqList li a {position:relative; display:inline-block; width:100%; padding:14px 24px; border:1px solid #eee; border-radius:12px;}
.inqList li a .qnaTagStatus {display:inline-block; height:22px; padding:0 10px; min-width:55px; border-radius:4px; background:#767676; color:#fff; font-size:13px; font-weight:500; text-align:center;}
.inqList li a .qnaTagStatus.complete {background-color:#066bfd;}
.inqList li a:after{content: ''; position: absolute; right:14px; top:50%; width: 24px; height: 24px; background:url(../../img/bzw/common/ico/ico_acco_arr.png) no-repeat; background-size: 100%; transform:translateY(-50%) rotate(-90deg);}
.inqList .contTxt {display:block;  margin:15px auto 6px; font-size:16px; font-weight: 700; color:#222;}
.inqList .data {display:block; color:#767676;}

/* 고객선터 > 신용상담신청 */
.priAgree {padding-top:30px; display:block;}
.priAgree + .uiAccoWrap.srvInfo {margin-top:30px;}
.priAgree .inpBtn{position:relative; display:inline-block; width:20px; height:20px; vertical-align:text-bottom;}
.priAgree .inpBtn:after {position:absolute; left:7px; top:5px; content: ''; width:7px; height:7px; border-top:2px solid #222; border-right: 2px solid #222; transform: rotate(45deg);}
.uiAccoWrap.srvInfo .listDot strong {display:block; margin-top:10px; color:#444; font-weight:700;}


